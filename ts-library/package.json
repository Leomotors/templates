{
  "name": "ts-library-template",
  "version": "1.0.0",
  "description": "Template for creating npm library/package with TypeScript and my personalized configurations",
  "main": "index.js",
  "repository": "https://github.com/{username}/{repo}",
  "author": "{username}",
  "license": "MIT",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build-inner": "tsc && tsc -p tsconfig.bruh.json",
    "build": "yarn lm-config && yarn build-inner",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "lint": "eslint src && prettier --check \"{src,tests}/**/*.ts\"",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"resolveJsonModule\":true}' mocha -r ts-node/register --exit tests/index.spec.ts",
    "ncu": "ncu -u \"/^(?!.*chalk)(?!.*globby).*$/\"",
    "docs": "yarn lm-config && typedoc"
  },
  "devDependencies": {
    "@leomotors/scripts": "^3.1.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "mocha": "^9.2.2",
    "npm-check-updates": "^12.5.4",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  }
}
